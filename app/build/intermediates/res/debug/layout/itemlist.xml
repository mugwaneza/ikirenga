<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#26ae20"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/relativeLayout">
       </RelativeLayout>


    <TextView
        android:id="@+id/citizen_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:textColor="#fff"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/citizen_location"
        android:layout_toEndOf="@+id/citizen_location" />
 <TextView
        android:id="@+id/citizen_institution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:textColor="#fff"
       android:layout_alignParentTop="true"
       android:layout_toRightOf="@+id/citizen_reason"
       android:layout_toEndOf="@+id/citizen_reason"
       android:layout_marginLeft="41dp"
       android:layout_marginStart="41dp" />

    <TextView
        android:id="@+id/citizen_location"
        android:layout_width="wrap_content"
        android:textSize="15dip"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/citizen_reason"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:id="@+id/citizen_description"
        android:layout_marginTop="45dp"
        android:textColor="#B2BEB5"
        android:layout_below="@+id/citizen_reason"
        android:layout_alignLeft="@+id/citizen_reason"
        android:layout_alignStart="@+id/citizen_reason" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:textColor="#fff"
        android:layout_above="@+id/citizen_description"
        android:layout_toRightOf="@+id/citizen_institution"
        android:layout_toEndOf="@+id/citizen_institution"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:id="@+id/time" />
</RelativeLayout>
